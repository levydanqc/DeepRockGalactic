{
  "name": "deep-rock-galactic",
  "version": "1.0.0",
  "main": "",
  "repository": "git@github.com:levydanqc/DeepRockGalactic.git",
  "author": "Dan Levy <danlevy.ca@icloud.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.1.0",
    "husky": "^7.0.0",
    "newman": "^5.3.2",
    "pretty-quick": "^3.1.3"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "concurrently \"cd frontend && yarn install\" \"cd backend && yarn install\"",
    "start": "concurrently \"cd frontend && yarn run serve\" \"cd backend && yarn run start\"",
    "test": "node database/postman/runTests.js",
    "pretest": "yarn run reset-contrats && yarn run reset-mineurs && yarn run reset-planetes && yarn run reset-reservations",
    "reset-contrats": "mongoimport --db deepRockGalactic --collection contrats --drop --file database/collections/contrats.json --jsonArray",
    "reset-mineurs": "mongoimport --db deepRockGalactic --collection mineurs --drop --file database/collections/mineurs.json --jsonArray",
    "reset-planetes": "mongoimport --db deepRockGalactic --collection planetes --drop --file database/collections/planetes.json --jsonArray",
    "reset-reservations": "mongoimport --db deepRockGalactic --collection reservations --drop --file database/collections/reservations.json --jsonArray"
  },
  "dependencies": {
    "prettier": "^2.6.2"
  }
}
